<div class="users-container">
    <div class="user-box">
        <%= image_tag @user.photo %>
        <div class="user-infos">
            <h2><%= @user.name %><h2>
            <span>Number of posts: <%= @user.posts.count %></span>
        </div>
    </div>
    <div class="bio-box">
        <h4>Bio</h4>
        <p><%= @user.bio %></p>
    </div>
    <% @user.recent_posts.each_with_index do |post, i| %>
        <%= render "posts/post_thumb", post: post %>
    <% end %>
    <%= link_to "See all posts", user_posts_path(@user) %>
</div>