<div class="post-box">
    <h3><%= link_to post.title, user_post_path(post.author, post) %></h3>
    <p><%= truncate(post.text, length: 70) %>...</p>
    <div class="post-stats">
        <span>Comments: <%= post.comments_counter %>,</span>
        <span>Likes: <%= post.likes_counter %></span>
    </div>
</div>