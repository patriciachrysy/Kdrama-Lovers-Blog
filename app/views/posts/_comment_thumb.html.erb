<div class="comment-content">
    <span><%= commenter %>:</span>
    <span><%= comment %></span>
    <%= link_to "Delete", user_post_comment_path(@post.author, @post, comment_id), data: {
            turbo_method: :delete,
            turbo_confirm: 'Are you sure you want to delete this comment?'
        }, class: 'like-button' if can? :destroy, Comment %>
</div>
